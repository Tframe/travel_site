<html>
<h3>Add new activity:</h3>
<form id="addActivity" action="/activity" method="post">
    Activity name: <input type="text" name="name"><br>
    Phone number: <input type="text" name="phone_number"><br>
    City: <select name='city_id'>
        {{#each city}}
          <option value='{{city_id}}'>{{name}}</option>
        {{/each}}
    </select>
    <br>
	<input type="submit" value="Submit">
 </form>
<br/>

<form id='filter_activity' action='' method=''>
<!--- this form does not submit directly, the button handles all the interaction with backend -->
    <label> Filter by State </label>
    <select id='state_filter' name="state"> 
    </select><br>
    <input type="button" value="Filter" onclick="filterActivityByState()">
</form>

<form id='search_activity' action='' method=''>
<!--- this form does not submit directly, the button handles all the interaction with backend -->
    <label> Search activitys by name starting with:</label>
    <input id='activity_search_string' type='text' name='activity_search_string' value=''>
    <input type="button" value="Search" onclick="searchActivityByName()">
</form>

<h3>Current Activities:</h3>
<table>
    <thead> 
        <th>Activity Name</th> 
        <th>Phone Number</th>
		<th>City</th>
    </thead> 
    <tbody>
        {{#each activity}} 
        <tr> 
            <td>{{name}}</td> 
            <td>{{phone_number}}</td>
			<td>{{city}}</td> <!--- maybe change to city_id -->
            <td><button onclick="deleteActivity({{id}})">Delete</button></td>
            <td><a href="/activity/{{id}}">Update</a></td>
        </tr> 
        {{/each}} 
    </tbody> 
</table> 
</html>
